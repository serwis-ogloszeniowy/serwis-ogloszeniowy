<form method="post" action="{{ path('category_delete', {'id': category.id}) }}" onsubmit="return confirm('Jesteś pewny że chcesz usunąć kategorię?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
    <button class="btn btn-danger back-to-list-button">Usuń</button>
</form>
