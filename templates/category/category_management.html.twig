{% extends 'base.html.twig' %}


{% block body %}


<div class="container base-container">

    <table class="table">
        <thead>
        <tr class="thead-color">
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Date of creation</th>
            <th>Edit</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr class="{{ cycle(["white", "gray"], loop.index0)}}">
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.description }}</td>
                <td>{{ category.dateOfCreation ? category.dateOfCreation|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('category_edit', {'id': category.id}) }}"><button class="btn btn-info">Edit</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_create') }}" class="waves-effect waves-light btn-large">Create category</a>

    {% for message in app.flashes('category') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}
</div>
{% endblock %}
